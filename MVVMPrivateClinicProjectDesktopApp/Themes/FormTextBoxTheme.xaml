<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:components="clr-namespace:MVVMPrivateClinicProjectDesktopApp.Views.Components">
    <Style x:Key="FormTextBox" TargetType="TextBlock">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="/Fonts/#OpenSans"/>
        <Setter Property="Padding" Value="5 0"/>
    </Style>
    
    <Style x:Key="LabelForm" TargetType="Label">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="/Fonts/#OpenSans"/>
    </Style>
</ResourceDictionary>